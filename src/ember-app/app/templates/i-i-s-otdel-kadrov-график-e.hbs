<h3 class="ui header">{{t "forms.i-i-s-otdel-kadrov-график-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iDсотрдника
      class=(if (v-get validationModel "iDсотрдника" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-kadrov-график-e.iDсотрдника-caption")
      data-test-i-i-s-otdel-kadrov-график-e-iDсотрдника=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iDсотрдника" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-kadrov-график-e.начальник-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.начальник
      displayAttributeName="iDсотрдника"
      autocomplete=true
      relationName="начальник"
      projection="НачальникL"
      title=(t "forms.i-i-s-otdel-kadrov-график-e.начальник-caption")
      readonly=readonly
      componentName="начальникLookup"
      class=(if (v-get validationModel "начальник" "isInvalid") "error")
      data-test-i-i-s-otdel-kadrov-график-e-начальник=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "начальник" "message")}}
  </div>
</form>
